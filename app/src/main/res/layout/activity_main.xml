<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/medium_space"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="@dimen/medium_space"
        android:fontFamily="@font/font_family"
        android:text="@string/app_name"
        android:textColor="@color/text_color_white"
        android:textSize="26sp" />

    <LinearLayout
        android:id="@+id/big_button_search"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/super_space"
        android:layout_marginTop="@dimen/space_x3"
        android:layout_marginEnd="@dimen/super_space"
        android:layout_weight="1"
        android:background="@drawable/rounded_corner"
        android:clickable="true"
        android:onClick="onLinearLayoutClick"
        android:foreground="?attr/selectableItemBackground"
        android:gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_search_light_mode"
            app:iconTint="@color/block_color" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/space"
            android:fontFamily="@font/font_family"
            android:text="@string/search"
            android:textColor="@color/text_color_black"
            android:textSize="26sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/big_button_media"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/super_space"
        android:layout_marginTop="@dimen/super_space"
        android:layout_marginEnd="@dimen/super_space"
        android:layout_weight="1"
        android:background="@drawable/rounded_corner"
        android:clickable="true"
        android:onClick="onLinearLayoutClick"
        android:foreground="?attr/selectableItemBackground"
        android:gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_media_light_mode"
            app:iconTint="@color/block_color" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/space"
            android:fontFamily="@font/font_family"
            android:text="@string/media"
            android:textColor="@color/text_color_black"
            android:textSize="26sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/big_button_settings"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/super_space"
        android:layout_marginTop="@dimen/super_space"
        android:layout_marginEnd="@dimen/super_space"
        android:layout_marginBottom="28dp"
        android:layout_weight="1"
        android:background="@drawable/rounded_corner"
        android:clickable="true"
        android:onClick="onLinearLayoutClick"
        android:foreground="?attr/selectableItemBackground"
        android:gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_settings_light_mode"
            app:iconTint="@color/block_color" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/space"
            android:fontFamily="@font/font_family"
            android:text="@string/settings"
            android:textColor="@color/text_color_black"
            android:textSize="26sp" />
    </LinearLayout>

</LinearLayout>